<?xml version="1.0"?>
<ruleset name="Thabatta Adv Theme">
    <description>WordPress Coding Standards for the custom theme.</description>

    <config name="installed_paths" value="data/vendor/wp-coding-standards/wpcs"/>

    <rule ref="WordPress" />
    <rule ref="WordPress-Extra" />
    <rule ref="WordPress-Docs" />

    <arg name="colors" />
    <arg name="extensions" value="php,inc" />

    <file>data/wp-content/themes/thabatta-adv-theme</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/images/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
</ruleset>
